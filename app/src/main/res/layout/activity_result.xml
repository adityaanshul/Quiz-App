<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/ic_bg">

    <TextView android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="@color/white"
        android:layout_marginTop="48dp"
        android:gravity="center"/>

    <ImageView  android:id="@+id/iv_trophy"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:contentDescription="Final Page"
        android:src="@drawable/ic_trophy"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView android:id="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#caf0f8"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFinalFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FINISH"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/finish_btn"
        android:textColor="@color/black"/>
</LinearLayout>